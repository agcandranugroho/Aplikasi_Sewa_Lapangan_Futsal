<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.metodePembayaranFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#84E488">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Prototype"
                android:textStyle="italic"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/btnLinkAja"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="Link Aja" />
            <Button
                android:id="@+id/btnGoPay"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="Go-Pay"
                />
            <Button
                android:id="@+id/btnOvo"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="OVO"
                />
            <Button
                android:id="@+id/btnEwalet"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="E-Wallet"
                />

    </LinearLayout>

</RelativeLayout>