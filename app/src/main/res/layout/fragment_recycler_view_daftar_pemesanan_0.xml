<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.recyclerViewDaftarPemesananFragment0">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        tools:listitem="@layout/card_item"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTambahPemesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="88dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_add_24"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="158dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_refresh"/>

    <ProgressBar
        android:id="@+id/progresBarRCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btnBelum"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Belum Bayar"
        android:textColor="#1E88E5"/>
    <Button
        android:id="@+id/btnSudah"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sudah Bayar"
        android:layout_marginLeft="200dp"/>
</RelativeLayout>